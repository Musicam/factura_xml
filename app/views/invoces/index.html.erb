<h1>Listing invoces</h1>

<table>
  <thead>
    <tr>
      <th>Id order type</th>
      <th>Id order type</th>
      <th>Shop</th>
      <th>Quantity</th>
      <th>Invoce number</th>
      <th>Invocedate</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @invoces.each do |invoce| %>
      <tr>
        <td><%= invoce.id_order_type %></td>
        <td><%= invoce.id_order_type %></td>
        <td><%= invoce.shop %></td>
        <td><%= invoce.quantity %></td>
        <td><%= invoce.invoce_number %></td>
        <td><%= invoce.invocedate %></td>
        <td><%= link_to 'Show', invoce %></td>
        <td><%= link_to 'Edit', edit_invoce_path(invoce) %></td>
        <td><%= link_to 'Destroy', invoce, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

