<%= form_for @invoce, :html => {:role => 'form',:class => 'form-horizontal'} do |f| %>
  <% if @invoce.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@invoce.errors.count, "error") %> prohibited this invoce from being saved:</h2>
      <ul>
      <% @invoce.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :invoced_company_id, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.select(:invoced_company_id, @invoced_companies.collect {|a| [a.name, a.id]},{}, {:class => 'form-control' }) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :order_type_id, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.select(:order_type_id, @order_types.collect {|a| [a.name, a.id]},{}, {:class => 'form-control' }) %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :shop, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :shop, class: 'form-control', :required => true %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :quantity, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.number_field :quantity, class: 'form-control', :required => true %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :address, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :address, class: 'form-control', :required => true %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :city, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= f.text_field :city, class: 'form-control', :required => true %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :invocedate, class: 'col-sm-2 control-label'%>
    <%= f.date_select :invocedate %>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit nil, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
